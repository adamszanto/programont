<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="filename">./logs</Property>
    </Properties>
    <Appenders>
        <RollingFile name="jpaReportAppender"
                     fileName="${filename}/jpa_report.log"
                     filePattern="${filename}/jpa_report-%d{HH:mm:ss:SSS}.log">
            <PatternLayout>
                <pattern>%d{HH:mm:ss} [%t] %-5level %logger{36} - %msg%n</pattern>
            </PatternLayout>
            <SizeBasedTriggeringPolicy size="1024 KB" />
        </RollingFile>
        <Console name="Console">
            <PatternLayout pattern="%d{HH:mm:ss} [%t] %-5level %logger{36} - %msg%n" />
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="JpaReport" level="info" additivity="false">
            <AppenderRef ref="jpaReportAppender" />
        </Logger>
        <Logger name="RiportingService" level="info" additivity="false">
            <AppenderRef ref="logger" />
        </Logger>
        <Root level="fatal">
            <AppenderRef ref="jpaReportAppender" />
            <AppenderRef ref="Console" />
        </Root>
    </Loggers>
</Configuration>
